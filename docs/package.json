{
  "name": "nativelink-docs",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "sync": "astro sync",
    "astro": "astro",
    "biome": "biome",
    "docs": "bun run docs.build && bun run docs.generate",
    "docs.build": "cd .. && unset TMPDIR TMP; bazelisk build nativelink-config:docs_json && cd docs && bun run src/utils/metaphase_aot.ts",
    "docs.generate": "bun run src/utils/md_to_mdx_aot.ts",
    "build": "bun fix && astro build",
    "check": "biome ci . && astro check",
    "dev": "astro dev",
    "fix": "bun lint && bun format && bun sync",
    "format": "biome format --write .",
    "lint": "biome check --write --unsafe .",
    "check.lint": "biome check .",
    "preview": "bun run build && bun serve",
    "serve": "deno run --allow-net --allow-read --allow-env ./dist/server/entry.mjs",
    "deploy": "deployctl deploy --include=./dist --entrypoint=./dist/server/entry.mjs --save-config",
    "staging": "bun setup && bun docs && bun run build && bun run deploy",
    "prod": "bun setup && bun docs && bun run build && bun run deploy --prod",
    "setup": "bun install && bun run deno install -Arf jsr:@deno/deployctl@1.12.0"
  },
  "dependencies": {
    "@astrojs/check": "^0.7.0",
    "@astrojs/deno": "5.0.1",
    "@astrojs/markdown-remark": "^5.1.0",
    "@astrojs/partytown": "^2.1.1",
    "@astrojs/sitemap": "^3.1.6",
    "@astrojs/starlight": "^0.25.5",
    "@beoe/pan-zoom": "^0.0.3",
    "@beoe/rehype-mermaid": "^0.0.1",
    "@deno/astro-adapter": "^0.1.3",
    "@tailwindcss/vite": "^4.0.0-alpha.19",
    "astro": "^4.5.12",
    "rehype-mermaid": "^2.1.0",
    "tailwindcss": "^4.0.0-alpha.19"
  },
  "devDependencies": {
    "@bazel/bazelisk": "^1.19.0",
    "@biomejs/biome": "^1.8.1",
    "@lorenzo_lewis/starlight-utils": "^0.1.1",
    "@types/bun": "latest",
    "rehype-autolink-headings": "^7.1.0",
    "remark": "^15.0.1",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "playwright-core": "1.44.0"
  },
  "trustedDependencies": ["@biomejs/biome", "esbuild", "sharp"]
}
